@{
    @model Book
}

@*This serves as a card of sorts, bundling book info*@
@* todo: make generic for other item types? *@
<div class="my-4 p-relative card p-4">

    <div class="d-flex justify-content-between my-2">
        <h5>@Model.Title</h5>
        <div>@Model.Author</div>
    </div>

    <div class="my-2"><em>@Model.Classification: @Model.Category</em></div>

    <div class="my-2">
        <div>Publisher: @Model.Publisher</div>
        <div>ISBN @Model.Isbn</div>
    </div>

    <div class="d-flex justify-content-between">
        <div>@Model.PageCount Pages</div>

    </div>

    <div class="text-center"><strong>Price: $@Model.Price</strong></div>

    <form method="post" asp-page="/Cart">
        <input type="hidden" asp-for="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />

        <button type="submit" class="btn btn-outline-primary add-to-cart">Add to Cart</button>
    </form>
</div>