@{
    ViewData["Title"] = "Books";
    @model BookListViewModel;
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>
<div>
    <div class="row">
    @foreach (var book in Model.BookList)
    {
        <div class="col-xl-6 col-sm-12 my-4"> @*This serves as a card of sorts, bundling book info*@
            <div class="d-flex justify-content-between my-2">
                <h5>@book.Title</h5>
                <div>@book.Author</div>
            </div>

            <div class="my-2"><em>@book.Classification: @book.Category</em></div>

            <div class="my-2">
                <div>Publisher: @book.Publisher</div>
                <div>ISBN @book.Isbn</div>
            </div>

            <div class="d-flex justify-content-between">
                <div>@book.PageCount Pages</div>

            </div>

            <div class="text-center"><strong>Price: $@book.Price</strong></div>
        </div>
    }
    </div>
</div>
<div class="page-navigation" page-info="@Model.PageInfo" page-action="Index"></div>
