@{
    @model Transaction;
}
<h2> These crisp new pages are almost in your hands... </h2> 

<div class="my-4 py-4">
    <div class="mb-4 text-center">
        <h3>Order Total: @ViewBag.OrderTotal.ToString("#.00")</h3>
    </div>
    <div asp-validation-summary="All" class="mb-4"></div>
    <form method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input class="form-control" asp-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Address1">Address Line 1</label>
            <input class="form-control" asp-for="Address1" />
        </div>
        <div class="form-group">
            <label asp-for="Address2">Address Line 2</label>
            <input class="form-control" asp-for="Address2" />
        </div>

        <div class="form-group">
            <label asp-for="City">City</label>
            <input class="form-control" asp-for="City" />
        </div>
        <div class="form-group">
            @*Todo: update to use a dropdown*@
            @* <select class="form-control" asp-for="BowlerState" asp-items="@Html.GetEnumSelectList<State>()">
                    <option selected="selected" value="">Please select</option>
                </select> *@
            <label asp-for="State">State</label>
            <input class="form-control" asp-for="State" />
        </div>
        <div class="form-group">
            <label asp-for="Zip">Zip Code</label>
            <input class="form-control" asp-for="Zip" />
        </div>
        <div class="form-group">
            <label asp-for="Country">Country</label>
            <input class="form-control" asp-for="Country" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="Gift" />
            <label class="form-check-label" asp-for="Gift">This Order is a Gift</label>
        </div>

        <button type="submit" class="btn btn-primary my-4">Place Order</button>
    </form>

</div>
